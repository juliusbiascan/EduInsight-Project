{
  "compilerOptions": {
    // "lib": ["dom", "dom.iterable", "esnext"],
    // "checkJs": false,
    // "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"],
      "package.json": ["package.json"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES6"
  },
  "include": ["src/**/*"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "typeRoots": ["./node_modules/@types", "./src/types"]
}
